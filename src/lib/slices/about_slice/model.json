{
  "type": "SharedSlice",
  "id": "about_slice",
  "name": "AboutSlice",
  "description": "About section with title, description, and statistics",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "StructuredText",
          "config": {
            "label": "Title",
            "placeholder": "Your Home in Berlin Kreuzberg",
            "allowTargetBlank": false,
            "single": "heading2"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Since 1999, Hotel Ludwig van Beethoven has been...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "additional_text": {
          "type": "StructuredText",
          "config": {
            "label": "Additional Text",
            "placeholder": "Located at Hasenheide 14, we're perfectly positioned...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        }
      },
      "items": {
        "stat_number": {
          "type": "Text",
          "config": {
            "label": "Statistic Number",
            "placeholder": "68"
          }
        },
        "stat_label": {
          "type": "Text",
          "config": {
            "label": "Statistic Label",
            "placeholder": "Comfortable Rooms"
          }
        },
        "stat_sublabel": {
          "type": "Text",
          "config": {
            "label": "Statistic Sublabel",
            "placeholder": "Since 1999"
          }
        }
      }
    }
  ]
}